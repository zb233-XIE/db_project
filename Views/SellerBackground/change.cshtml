@{
    ViewData["Title"] = "Welcome";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>卖家后台</title>
    <link rel="stylesheet" href="~/css/sellerbackgroundindex.css">
    <script src="~/js/Sellerbackground.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row cm-fix-height">
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h1>卖家信息修改</h1>
                        <form action="" method="post">
                            <table class="table table-bordered" style="margin-top:10px;">
                                <tr>
                                    <th style="text-aligin:left;">发行商昵称：</th>
                                    <td>
                                        <input type="text" name="Publisher_Name" value="@ViewData["name"]" class="form-control" id="Name" placeholder="请输入发行商昵称" />
                                    </td>
                                    <th style="text-aligin:left;">描述：</th>
                                    <td>
                                        <input type="text" name="Description" value="@ViewData["description"]" class="form-control" id="Description" placeholder="请输入描述" />
                                        </td>
                                </tr>
                                <tr>
                                    <th style="text-aligin:left;">发行商主页地址：</th>
                                    <td>
                                        <input type="text" name="Mail" value="@ViewData["mail"]" class="form-control" id="URL" placeholder="请输入主页地址" />
                                    </td>
                                </tr>
                                <tr>
                                    <th colspan="4" style="text-align:center;">
                                        <input type="button" class="btn btn-default" onclick="change()" value="修改" /><!-- 修改卖家信息并返回-->
                                        <input type="button" class="btn btn-default" onclick="    javascript: window.history.back();" value="返回" />
                                    </th>
                                </tr>
                            </table>
                            </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>
@{
    ViewData["Title"] = "个人信息";
}
<head>
    <link href="~/css/Common/common.css" type="text/css" rel="stylesheet" />
      <link rel="stylesheet" href="~/css/background.css">
    <title>用户信息</title>
</head>

<div class="card border-info">
    <h5 class="card-header bg-info">用户信息</h5>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-4 order-md-9">
                <img class="media-object img-thumbnail d-block mx-auto" alt="flying_doraemon Avatar" src="https://img1.imgtp.com/2022/09/01/ICSyEVmc.jpg">
            </div>
            <div class="col-md-8 order-md-1">
                <h2>
                    <span style="color: rgb(75, 175, 178);">@ViewData["name"]</span>
                    <span>
                        <strong style="color:black"></strong>
                    </span>
                </h2>
                <div class="list-group">
                    <div class="list-group-item">
                        <h4 class="list-group-item-heading">Email</h4>
                        <p class="list-group-item-text">@ViewData["mail"]</p>
                    </div>
                </div>
            </div>
        </div>
        <a type="button" class="btn btn-info btn-sm" href="/Account/ModifyPSD"><span class="glyphicon glyphicon-pencil"></span> 修改个人信息</a>

        <a type="button" class="btn btn-success btn-sm" href="https://github.com/zb233-XIE/db_project"><span class="glyphicon glyphicon-arrow-right"></span> 访问个人博客</a>
    </div>
</div>
